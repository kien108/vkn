{
  "printWidth": 80,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "bracketSameLine": true,
  "proseWrap": "never",
  "overrides": [
    {
      "files": ["*.{js,json}"],
      "options": {
        "semi": true,
        "tabWidth": 4
      }
    },
    {
      "files": [".prettierrc"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
